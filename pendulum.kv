#:kivy 1.0.9

<PendulumScreen>:
    canvas:
        Ellipse:
            pos: 400 + self.pivotx * 100, 400 + self.pivoty * 100
            size: 4, 4
        Ellipse:
            pos: 400 + self.pivoty * 100, 200 - self.pivotz * 100
            size: 4, 4
        Ellipse:
            pos: 200 + self.pivotx * 100, 200 - self.pivotz * 100
            size: 4, 4
        Ellipse:
            pos: 400 + self.bobx * 100, 400 + self.boby * 100
            size: 10, 10
        Ellipse:
            pos: 400 + self.boby * 100, 200 - self.bobz * 100
            size: 10, 10
        Ellipse:
            pos: 200 + self.bobx * 100, 200 - self.bobz * 100
            size: 10, 10
        Ellipse:
            pos: 200, 200
            size: 4, 4
        Ellipse:
            pos: 400, 200
            size: 4, 4
        Ellipse:
            pos: 400, 400
            size: 4, 4
